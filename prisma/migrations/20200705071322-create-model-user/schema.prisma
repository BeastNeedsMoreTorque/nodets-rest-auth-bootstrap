datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                 String    @default(uuid()) @id
  first_name         String
  last_name          String
  email              String    @unique
  password           String
  reset_token        String?
  refresh_token      String?
  confirmation_token String
  confirmed_at       DateTime?
  created_at         DateTime  @default(now())
  updated_at         DateTime  @default(now())
}
